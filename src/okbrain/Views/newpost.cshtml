@{
    Layout = "Shared/_Layout.cshtml";
}

@section style {
    <link href="~/Content/blog.css" rel="stylesheet" />
}

@Html.Partial("Shared/_Navigation.cshtml")

<div class="breather"></div>

<div class="container-fluid">
    
    <div class="row">
        <div class="col-sm-12">
            <div class="well well-sm form-group form-inline">
                <input type="submit" class="btn btn-primary" value="Save"/>
                <input type="button" class="btn btn-warning" value="Publish"/>
                <input type="button" class="btn btn-warning" value="Withdraw"/>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-sm-6">
            <div class="well well-sm">
                <form class="">
                    <fieldset>
                    

                        <!-- Text input-->
                        <div class="form-group">
                            <div class="col-md-12">
                                <input id="title" name="title" type="text" placeholder="Title" class="form-control input-lg" required="" data-bind="value: title, valueUpdate: 'afterkeydown'">
                            </div>
                        </div>

                        <!-- Textarea -->
                        <div class="form-group">
                            <div class="col-md-12">
                                <textarea class="form-control input-lg" id="post" name="post" cols="30" rows="30" data-bind="value: body, valueUpdate: 'afterkeydown'"></textarea>
                            </div>
                        </div>

                        <!-- Select Basic -->
                        <div class="form-group">
                            <label class="col-md-12 control-label" for="category">Category</label>
                            <div class="col-md-12">
                                <select id="category" name="category" class="form-control">
                                    <option value="1">Option one</option>
                                    <option value="2">Option two</option>
                                </select>
                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <div class="col-md-12">
                                <input id="tags" name="tags" type="text" placeholder="tags" class="form-control input-lg">
                                <span class="help-block">comma separated tags</span>
                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-12 control-label" for="pubDate">Publish Date</label>
                            <div class="col-md-12">
                                <input id="pubDate" name="pubDate" type="text" placeholder="" class="form-control input-lg">
                            </div>
                        </div>

                        <!-- Select Basic -->
                        <div class="form-group">
                            <label class="col-md-12 control-label" for="status">Status</label>
                            <div class="col-md-12">
                                <select id="status" name="status" class="form-control">
                                    <option value="1">Draft</option>
                                    <option value="2">Ready</option>
                                </select>
                            </div>
                        </div>
                        <div class="breather">&nbsp;</div>
                        <div class="form-group form-inline">
                            <input type="submit" class="btn btn-primary" value="Save"/>
                            <input type="submit" class="btn btn-default" value="Cancel"/>
                        </div>
                    </fieldset>
                </form>

            </div>

        </div>
        <!-- /.blog-main -->
        
        <div class="col-sm-6" data-bind="html: post">
            
        </div>


    </div>
    <!-- /.row -->

</div>
<!-- /.container -->

<div class="blog-footer">
    <p>Blog template built for <a href="http://getbootstrap.com">Bootstrap</a> by <a href="https://twitter.com/mdo">@@mdo</a>.</p>
    <p>
        <a href="#">Back to top</a>
    </p>
</div>

@section javascript{
    <script src="/Content/assets/js/libs/knockout-3.2.0.js"></script>
    <script src="/Content/assets/js/libs/Markdown.Converter.js"></script>
    
    <script type="text/javascript">

        var ViewModel = function() {
            var self = this;

            self.title = ko.observable('');
            self.body = ko.observable('');

            self.post = ko.computed(function() {
                var converter = new Markdown.Converter();
                var html = converter.makeHtml(self.body());
                return "<h1 class='title'>" + self.title() + "</h1>" + html;
            });
        };

        var vm = new ViewModel();
        ko.applyBindings(vm);
    </script>
}